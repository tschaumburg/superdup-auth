{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs", 
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "rootDir": "source",
        "noEmitOnError": true,
        "outDir": "dist",
        "declarationDir": "dist", 
        "declaration": true
    }, 
    "include": ["**/*.ts"],
    "exclude": [
        "dist",
        "build",
        "platforms",
        "www",
        "bower_components",
        "node_modules"
    ]
}
